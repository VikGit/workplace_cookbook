<% end -%>

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

# User specific aliases and functions
extract () {
  if [ -f $1 ] ; then
    case $1 in
      *.tar.bz2)   tar xvjf $1    ;;
      *.tar.gz)    tar xvzf $1    ;;
      *.bz2)       bunzip2 $1     ;;
      *.rar)       unrar x $1       ;;
      *.gz)        gunzip $1      ;;
      *.tar)       tar xvf $1     ;;
      *.tbz2)      tar xvjf $1    ;;
      *.tgz)       tar xvzf $1    ;;
      *.zip)       unzip $1       ;;
      *.Z)         uncompress $1  ;;
      *.7z)        7z x $1        ;;
      *)           echo "don't know how to extract '$1'..." ;;
    esac
  else
    echo "'$1' is not a valid file!"
  fi
 }

create () {
  case $1 in
    *.tar.bz2)      tar jcvf $1 $2 ;;
    *.tar.gz)       tar zcvf $1 $2;;
    *.bz2)          bzip2 $1 $2    ;;
    *.rar)          rar a $1 $2    ;;
    *.gz)           gzip $1 $2     ;;
    *.tar)          tar cvf $1 $2  ;;
    *.tbz2)         tar jcvf $1 $2 ;;
    *.tgz)          tar zcvf $1 $2 ;;
    *.zip)          zip $1 $2      ;;
    *.Z)            compress $1 $2 ;;
    *.7z)        7z a $1 $2     ;;
    *)              echo "don't know how to create '$1'..." ;;
  esac
}                                            
